generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String             @id @default(uuid())
  email       String             @unique
  password    String
  name        String?            @db.VarChar(255)
  phoneNumber String             @unique @db.VarChar(20)
  gender      user_gender_enum?
  birthDate   DateTime?          @db.Date
  language    user_language_enum @default(English)
  isActive    Boolean            @default(false)
  roleId      Int
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @default(now())
  store       Store[]
  role        Role               @relation(fields: [roleId], references: [id])
}

model Role {
  id    Int            @id @default(autoincrement())
  name  user_role_enum @default(user)
  users User[]
}

model Store {
  id          String  @id @default(uuid())
  name        String
  description String?
  city        String?
  street      String?
  district    String?
  houseNumber String?
  postalCode  String?
  logo        String?
  phoneNumber String? @unique
  whatsApp    String?
  email       String? @unique
  instagram   String?
  userId      String
  user        User    @relation(fields: [userId], references: [id])
}

enum user_gender_enum {
  male
  female
}

enum user_language_enum {
  English
  Russian
}

enum user_role_enum {
  user
  seller
}
