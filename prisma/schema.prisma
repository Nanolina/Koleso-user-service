generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(uuid())
  name      String?      @db.VarChar(255)
  gender    GenderType?
  birthDate DateTime?    @db.Date
  language  LanguageType @default(English)
  roleId    Int
  addresses Address[]
  role      Role         @relation(fields: [roleId], references: [id])
}

model Role {
  id    Int      @id @default(autoincrement())
  name  RoleType @default(User)
  users User[]
}

model Address {
  id             String  @id @default(uuid())
  country        String
  region         String?
  city           String
  street         String
  houseNumber    String
  apartment      String?
  postalCode     String?
  additionalInfo String?
  userId         String?
  user           User?   @relation(fields: [userId], references: [id])
}

enum GenderType {
  Male
  Female
}

enum LanguageType {
  English
  Russian
}

enum RoleType {
  User
  Seller
}
